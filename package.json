{
  "type": "module",
  "devDependencies": {
    "eslint": "^9.30.1",
    "eslint-config-airbnb-extended": "^2.1.2",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "jest": "^30.0.4",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2"
  },
  "scripts": {
    "lint": "eslint --fix .",
    "format": "prettier --ignore-unknown --write .",
    "prepare": "husky",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest",
    "test-ci": "NODE_OPTIONS=--experimental-vm-modules npx jest --ci --reporters=default --reporters=jest-junit"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{js,jsx,ts,tsx,md,html,css}": [
      "prettier --write"
    ]
  }
}
